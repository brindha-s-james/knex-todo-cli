#!/usr/bin/env node

//getting the functions from commands.js then/catch functions
const commands = require('./commands')


//process.argv variables
const userInputs = process.argv
const cmd = userInputs[2]
// added userId
const id = userInputs[3]
const taskStr = userInputs[4]
//const word = userInputs[5]


//switch statment of comands to use. calling the comands.js functions
switch (cmd) {
  case 'list':
    commands.list()
    break

  //added switch case to run the command ./todo display (enter id here)
  case 'display':
    commands.selectOneTodo(id)
    break
//added to delete is using ./todo delete (enter id here)
  case 'delete':
    commands.deleteToDo(id)
    break

    //added to add another task ./todo add 'enter new task here in a string'
  case 'add':
    commands.addNewTask(id)
    break

    //update tasks ./todo update (add id without these brackets) 'enter updated task here in string'
    case 'update':
      commands.updateTodo(id, taskStr)
      break

      // search for a task by word using ./todo search ' examplelunch'
    case 'search':
      commands.searchByWord(id)
      break

    //check if a task is compleate ./todo compleated id
    case 'completed':
      commands.checkTaskCompleted(id)
      break

  default:
    console.log(`I don't understand that command: ${cmd}`)
}
