#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv //displays an array

const cmd = userInputs[2]
const id = userInputs[3]
const task = userInputs[4]


switch (cmd) {
  case 'list':
    commands.list()
    break
//5.
  case 'display':
    commands.selectOneTodo(id)
  break
//6. delete task by user once its one. eg ./todo done 1
  case 'delete':
    commands.deleteTaskById(id)
  break
//7. add a new task by entering a command such as ./todo add 'pet cat'
  case 'add':
    commands.addNewTask(task)
  break
//8.Update a task by ID with a command such as ./todo update 1 'clean my room thoroughly'
  case 'update':
    commands.updateTask(id, task)
  break

  //9.enable user to search for task containing a search term eg. ./todo search 'wire' =====
  case 'searchtask':
  commands.searchTaskByWord(`task${task}`)
  break

  //11.Enable users to mark a task complete, without deleting it from the database

  case 'complete':
    commands.taskCompleted(id, task)
    break


  default:
    console.log(`I don't understand that command: ${cmd}`)
}
