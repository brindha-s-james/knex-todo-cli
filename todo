#!/usr/bin/env node

const commands = require('./commands')
const userInputs = process.argv
const cmd = userInputs[2]
const arg1 = userInputs[3]
const arg2 = userInputs[4]


cmd == 'list'
? commands.list()
: cmd== 'add' 
? commands.add(arg1)
: cmd=='display' 
? commands.displayTodo(arg1)
: cmd =='delete' 
? commands.deleteTask(arg1)
: cmd=='update' 
? commands.update(arg1, arg2)
: cmd == 'search'
? commands.searchTask(arg1)
: cmd == 'complete' 
? commands.complete(arg1)
: console.log(`I don't understand that command: ${cmd}`)
