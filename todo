#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]

switch (cmd) {
  case 'list':
    commands.list()
    break

  case 'id':
    commands.printById(userInputs[3])
    break
  
  case 'del':
    commands.delById(userInputs[3])
    break

  case 'add':
    commands.addTask(userInputs[3])
    break

  default:
    console.log(`I don't understand that command: ${cmd}`)
}

