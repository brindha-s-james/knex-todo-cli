#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]
const id = userInputs[3]
const task = userInputs[4]


switch (cmd) {
  case 'list':
    commands.list()
    break

  case 'display':
    commands.display(id)
    break

  case 'done':
    commands.taskDone(id)
    break

  case 'add':
    commands.addTodo(id, task)
    break
  
  case 'update':
    commands.updateTask(id, task)
    break

  case 'search':
    commands.findTask(id)
    break

  case 'completed':
    commands.completeTask(id)
    break
  

  default:
    console.log(`I don't understand that command: ${cmd}`)
}
