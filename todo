#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]

switch (cmd) {
  case 'list':
    if (userInputs[3] === '-c') { commands.listByStatus(true) } else if (userInputs[3] === '-i') { commands.listByStatus(false) } else {
    commands.list()
    }
    break

  case 'id':
    commands.printById(userInputs[3])
    break
  
  case 'del':
    if (userInputs[3] === '-c') { commands.deleter('completed', true) } else if (userInputs[3] === '-i') { commands.deleter('completed', false) } else {
      commands.deleter('id', userInputs[3])
      }
    break

  case 'add':
    commands.addTask(userInputs[3])
    break
  case 'update':
    commands.updateTask(userInputs[3], userInputs[4])
    break

  case 'search':
    commands.searchTasks(userInputs[3])
    break

  case 'complete':
    commands.completeTask(userInputs[3], true)
    break

  case 'incomplete':
    commands.completeTask(userInputs[3], false)
    break

  default:
    console.log(`I don't understand that command: ${cmd}`)
}

