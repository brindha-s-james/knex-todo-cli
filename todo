#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]
//const id =typeof userInputs[3]? 'number':  
const arg = userInputs[3]
const arg2 = userInputs[4]



switch (cmd) {
  case 'list':
    commands.list()
    break
    case 'add':
    commands.add(arg)
    break 
    case 'display':
      commands.displayTodo(arg)
      break
    case 'delete':
    commands.deleteTask(arg)
    break
    case 'update':
    commands.update(arg, arg2)
    break
    case 'search':
      commands.searchTask(arg)
      break
    case 'complete':
      commands.complete(arg)
    break
  default:
    console.log(`I don't understand that command: ${cmd}`)
}
