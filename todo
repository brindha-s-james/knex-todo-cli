#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]
const firstParam = userInputs[3]
const secondParam = userInputs[4]
console.log(userInputs)

switch (cmd) { // I think you understand these Brindha but if not just let me know.
  case 'list':
    commands.list()
    break
  case 'selectOneTodo':
    commands.selectOneTodo(firstParam)
    break

  case 'deleteTodo':
    commands.deleteTodo(firstParam)
    break

  case 'addJob':
    commands.addJob(firstParam)
    break

  case 'updateJob':
    commands.updateJob(firstParam, secondParam)
    break

  case 'search':
    commands.findTheJob(firstParam)
    break

  case 'complete':
    commands.completeJob(firstParam)
    break

  case 'priority':
    commands.priority()
    break

  default:
    console.log(`I don't understand that command: ${cmd}`)
}
