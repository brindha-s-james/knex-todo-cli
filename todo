#!/usr/bin/env node

const funcs = require('./commands')

const userInputs = process.argv

const cmd = userInputs[2]

// first action after running command
const act = userInputs[3]

// second action after running command (only used in update)
const upAct = String(userInputs[4])

switch (cmd) {
  case 'list':
    funcs.list()
    break

  case 'idsearch':
    funcs.displayTodo(act)

    break

  case 'done':
    funcs.deleteToDo(act)
    break

  case 'add':
    funcs.newTodo(act)
    break

  case 'update':
    funcs.updateToDo(act, upAct)
    break

  case 'clear':
    funcs.clear(act)
    break

  default:
    console.log(`bro what is ${cmd}`)
}
